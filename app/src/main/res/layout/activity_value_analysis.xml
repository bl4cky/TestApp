<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="example.testapp.ValueAnalysisActivity"
    android:background="@mipmap/logo_v5">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonProfil"
        android:background="@mipmap/salesman"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonToDo"
        android:background="@mipmap/white_list"
        android:minWidth="60dp"
        android:minHeight="60dp"
        android:layout_alignTop="@+id/imageButtonProfil"
        android:layout_toRightOf="@+id/imageButtonProfil"
        android:layout_toEndOf="@+id/imageButtonProfil"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Value Analysis"
        android:id="@+id/textView4"
        android:textSize="15dp"
        android:layout_below="@+id/imageButtonVA"
        android:layout_toLeftOf="@+id/imageButtonHistory"
        android:layout_toStartOf="@+id/imageButtonHistory"
        android:layout_marginRight="5dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonHistory"
        android:background="@mipmap/white_list_folder"
        android:minWidth="60dp"
        android:minHeight="60dp"
        android:layout_alignTop="@+id/imageButtonToDo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonVA"
        android:background="@mipmap/network_monitor"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:focusable="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageButtonHistory"
        android:layout_toStartOf="@+id/imageButtonHistory" />

</RelativeLayout>
